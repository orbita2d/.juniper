#! /bin/bash
alias realias='source ~/.config/.aliases'
alias ls='exa'
alias ll='exa -l'
alias la='exa -la'
alias vi='nvim'
alias vim='nvim'
alias clip='xclip -selection clipboard' # For command | clip
alias paste='xclip -o -selection clipboard' # paste | command or paste > file
alias mfetch='clear; neofetch --config $HOME/.config/neofetch/mini.conf --colors fg fg fg fg fg fg --off'
alias fetch='clear; neofetch --config $HOME/.config/neofetch/full.conf'
alias chat='chatblade --openai-api-key "$(cat $HOME/.secrets/openai)"'
